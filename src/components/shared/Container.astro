---
export interface Props {
    idName?: string;
    className?: string;
    lgVariant?: "normal" | "reverse";
}

const { idName, className, lgVariant } = Astro.props;
---

<div
    id={idName! ? idName : null}
    data-container
    class={`relative 
            flex-1 
            flex flex-col ${lgVariant === "reverse" ? " lg:flex-row-reverse" : "lg:flex-row"}
            min-w-full lg:w-full 
            min-h-full lg:h-full 
            my-0 lg:my-auto
            px-4 sm:px-8 md:px-12 midmd:px-14 lg:px-16 xl:px-20
            gap-4 sm:gap-8 md:gap-12 midmd:gap-14 lg:gap-16 xl:gap-20 
            ${className! ? className : ""}`}
>
    <slot />
</div>

---
export interface Props {
    idName?: string;
    className?: string;
    lgVariant?: "normal" | "reverse";
}

const { idName, className, lgVariant } = Astro.props;
---

<div
    id={idName! ? idName : null}
    data-container
    class={`relative 
            flex-1 
            flex flex-col ${lgVariant === "reverse" ? " lg:flex-row-reverse" : "lg:flex-row"}
            min-w-full lg:min-w-[1024px]
            min-h-full lg:h-full 
            my-0 lg:my-auto
            mx-0 lg:mx-auto
            px-4 sm:px-6 md:px-8 lg:px-12 xl:px-14 2xl:px-16
            gap-4 sm:gap-6 md:gap-8 lg:gap-12 xl:gap-14 2xl:gap-16
            ${className! ? className : ""}`}
>
    <slot />
</div>

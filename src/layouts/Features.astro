---
import Section from "../components/shared/Section.astro";
import Subcontainer from "../components/shared/Subcontainer.astro";
---
<!-- SECTION FEATURES -->
<Section idName="features" containerLgVariant="reverse">
    <Subcontainer className="flex-1 flex flex-col w-full">
        <slot />
    </Subcontainer>

    <div class="relative 
                flex-[0_0_auto] 
                flex 
                mx-0 
                w-full lg:w-1/3 lg:min-w-[25%] lg:max-w-[33.33%]
                items-start lg:items-center 
                text-center lg:text-left 
                justify-start lg:justify-center">
        
        <div class="relative flex z-0 w-full h-max justify-center items-center">
            <img
                src=`${import.meta.env.BASE_URL}/images/attributes.jpeg`
                alt="banner image"
                width="1024"
                height="1024"
                class="relative rounded-3xl object-contain z-0 w-auto lg:max-h-[550px]" />

            <span class="absolute w-full aspect-[16/5] -skew-x-12 rounded-full bg-gradient-to-tr from-primary to-green-400 opacity-40 blur-2xl left-0 bottom-0 -z-10" />
        </div>
    </div>
</Section>

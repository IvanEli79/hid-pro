---
import Section from "../components/shared/Section.astro";
import Subcontainer from "../components/shared/Subcontainer.astro";
---

<!-- SECTION ABOUT US -->
<Section idName="about" containerLgVariant="reverse">
    <Subcontainer className="flex-1">
        <slot />
    </Subcontainer>

    <Subcontainer className="lg:w-1/3 flex my-0 justify-center">

        <span class="absolute w-full aspect-[16/5] -skew-x-12 rounded-full bg-gradient-to-tr from-primary to-green-400 opacity-40 blur-2xl left-0 bottom-0 -z-10"></span>

        <img src=`${import.meta.env.BASE_URL}/images/about.jpeg`
             alt="About Us image"
             width="1024"
             height="1024"
             class="rounded-3xl w-auto top-0 lg:bottom-0 max-h-full object-contain z-0 lg:max-h-[550px] lg:max-w-fit" />
             
    </Subcontainer>
</Section>

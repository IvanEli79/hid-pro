---
import Layout from "/src/layouts/Layout.astro";

import Head from "./head.astro";
import Foot from "./foot.astro";

import Home from "./home.astro";
import Statistics from "./statistics.astro";
import Clients from "./clients.astro";
import AboutUs from "./about-us.astro";
import Services from "./services.astro";
import Technologies from "./technologies.astro";
import Attributes from "./attributes.astro";
import ContactUs from "./contact-us.astro";

const lang = "en";
const company = "HID-Prology";
---

<Layout title={company}
		lang={lang}
		description="IT Consulting Services and Software Development"
		keywords="IT Consulting Services, Software Development">

	<Head lang={lang} slot="header" />

	<Home />
	<!--
	<Statistics />
	<Clients />
	-->
	<AboutUs />
	<Services />
	<Technologies />
	<Attributes />
	<ContactUs />
	
	<Foot company={company} slot="footer" />
</Layout>
